########################################################################################
#----------------------------------EXEC_NAME-------------------------------------------#
########################################################################################

NAME            :=		Webserv
########################################################################################
#-------------------------------COMPILER_OPTION----------------------------------------#
########################################################################################

COMP            :=      c++
CFLAGS          :=      -Wall -Wextra -Werror -MMD -MP -pedantic -std=c++98

########################################################################################
#------------------------SOURCE+OBJECT+DEPENDANCE_FILE---------------------------------#
########################################################################################

SRC             :=      main.cpp

SRCPATH         :=      ./srcs/
SRCS            :=      $(addprefix $(SRCPATH), $(SRC))
OBJS            :=      $(SRCS:.cpp=.o)
DEPS            :=      $(OBJS:.o=.d)

########################################################################################
#-----------------------------------COLOR_VAR------------------------------------------#
########################################################################################

GREEN           :=      \033[0;32m
RED             :=      \033[0;31m
RED_BOLD        :=      \033[1;31m
BLUE_BOLD       :=      \033[1;34m
WHITE           :=      \033[0;0m

########################################################################################
#-------------------------------------MAKEFILE_RULE------------------------------------#
########################################################################################

all: $(NAME)

$(NAME): $(OBJS)
		@$(COMP) $(CFLAGS) $(OBJS) -o $@
		@echo "$(BLUE_BOLD)$(NAME) compilation: $(GREEN)OK$(WHITE)"

-include $(DEPS)
%.o: %.cpp
		@$(COMP) $(CFLAGS) -c $< -o $@

clean:
		@rm -f $(OBJS) $(DEPS)
		@echo "$(RED_BOLD)$(NAME) clean: $(GREEN)OK$(WHITE)"

fclean:
		@rm -f $(OBJS) $(DEPS) $(NAME)
		@echo "$(RED_BOLD)$(NAME) fclean: $(GREEN)OK$(WHITE)"

re: fclean all

.PHONY: all clean fclean re